<?xml version="1.0" encoding="utf-8"?>
<com.tealium.example.view.VideoLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/videolayout_errorlabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/error_unabletoplayvideo"
        android:textColor="#770000"
        android:textStyle="bold"
        android:visibility="gone" />

    <SeekBar
        android:id="@+id/videolayout_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/videolayout_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/videolayout_seekbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/videolayout_toggle_contentdescription"
        android:src="@android:drawable/ic_media_play" />

    <VideoView
        android:id="@+id/videolayout_videoview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/videolayout_toggle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</com.tealium.example.view.VideoLayout>